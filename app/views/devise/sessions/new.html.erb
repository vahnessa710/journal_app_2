  <div class="login-form-wrapper">
    <p class = "login-title">LOGIN</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, class: "form-input", autofocus: true, autocomplete: "email",  placeholder: "âœ‰ Email" %>
      </div>

      <div class="field"> 
        <%= f.password_field :password, class: "form-input", autocomplete: "current-password",  placeholder: "ðŸ”’ï¸Ž Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
