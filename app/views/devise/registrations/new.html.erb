<div class = "main-container">
  <h1 class="everyday-title"> ðŸ““ï¸Ž Everyday</h1>

  <div class="login-form-wrapper">
    <p class = "login-title">SIGN UP</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input",  placeholder: "âœ‰ Email" %>
        <% if resource.errors[:email].present? %>
          <div class="error-message">
            <p>Email <%= resource.errors[:email].first %></p>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input", placeholder: "ðŸ”’ï¸Ž Password" %>
          <% if resource.errors[:password].present? %> 
            <div class = "error-message">
              <p>Password <%= resource.errors[:password].first %></p>
            </div>
          <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "ðŸ”’ï¸Ž Confirm Password" %>
        <% if resource.errors[:password_confirmation].present? %>
            <div class="error-message">
              <p><%= resource.errors[:password_confirmation].first %></p>
            </div>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "login-button"  %>
      </div>
    <% end %>

    <div class="already">
      <p>
        <span>Already have an account?</span>
        <span><%= render "devise/shared/links" %></span>
      </p>
    </div>

  </div>
</div>