                    </div>
                <% end %>
            <%end%>
        </div>
        <div class="categories-wrapper">
            <div class ="header-category-list-wrapper">
                <h1 class="categories-section-title">Category List</h1>
                <h1><i class="fa-solid fa-rocket"></i></h1>
            </div>
            <hr>
                <div class = "create-button" >
                    <%= link_to "Create a Category", new_category_path%>
                </div>
                <div>
                    <% if @categories.count.zero? %>
                        <p class="empty-msg">No categories yet.</p>
                        <% else %>
                                <% @categories.each do |category| %>
                                        <%= link_to category_path(category), class: "category-list" do %>
                                            <i class="fa-solid fa-rocket"></i>
                                            <span class = "category-item"><%= category.title %></span>
                                        <% end %>
                                <% end %>
                    <% end %>
                </div>
                </div>       
        </div>
    </div>

    
