        <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "logout-button" %>
    </div>
    <div class = "tasks-categories-wrapper">
        <div class="tasks-wrapper">
            <div class = "task-title-and-bell">
                <h2><%= link_to 'Tasks for Today', due_today_path, class: "section-title" %></h2>
                <%= link_to 'ðŸ””ï¸Ž', due_today_path, class: "notification-bell" %>
            </div>
            <hr>
            <%if @due_today.count.zero?%>
                <p class = " empty-msg" >No task for today! </p>
            <%else%>
                <% @due_today.each do |task| %>
                    <div class="task-item">
                        <%= link_to category_task_path(task.category, task), class: "task-desc"  do %>
                            <span> ðŸ“Œï¸Ž <%=task.description%> </span>
